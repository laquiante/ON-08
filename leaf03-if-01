auto lo
iface lo inet loopback
    address 10.0.0.13/32
    clagd-vxlan-anycast-ip 10.0.0.2

auto swp1
iface swp1

auto swp2
iface swp2

auto swp3
iface swp3

auto bond1
iface bond1
    bridge-access 10
    bond-slaves swp1
    clag-id 1
    bond-lacp-bypass-allow yes

auto bond2
iface bond2
    bridge-access 10
    bond-slaves swp2
    clag-id 2
    bond-lacp-bypass-allow yes

auto bond3
iface bond3
    bridge-access 20
    bond-slaves swp3
    clag-id 3
    bond-lacp-bypass-allow yes

auto swp51
iface swp51

auto swp51
iface swp51

auto bridge
iface bridge
    bridge-ports bond1 bond2 bond3
    bridge-vids 10 20
    bridge-vlan-aware yes

auto peerlink
iface peerlink
    bond-slaves swp49 swp50

auto peerlink.4094
iface peerlink.4094
    clagd-args --initDelay 20
    clagd-backup-ip 192.168.200.9 vrf mgmt
    clagd-peer-ip linklocal
    clagd-priority 1000
    clagd-sys-mac 44:38:39:00:00:02

auto vlan10
iface vlan10
    address-virtual 00:00:00:00:00:01 172.31.10.254/24
    vlan-id 10
    vlan-raw-device bridge

auto vlan20
iface vlan20
    address-virtual 00:00:00:00:00:01 172.31.20.254/24
    vlan-id 20
    vlan-raw-device bridge

auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2
