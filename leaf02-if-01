auto lo
iface lo inet loopback
    address 10.0.0.12/32
    clagd-vxlan-anycast-ip 10.0.0.1

auto swp1
iface swp1

auto hpcbond
iface hpcbond
    bridge-access 10
    bond-slaves swp1
    clag-id 1
    bond-lacp-bypass-allow yes

auto swp51
iface swp51

auto bridge
iface bridge
    bridge-ports peerlink hpcbond
    bridge-vids 10
    bridge-vlan-aware yes

auto peerlink
iface peerlink
    bond-slaves swp49 swp50

auto peerlink.4094
iface peerlink.4094
    clagd-args --initDelay 20
    clagd-backup-ip 192.168.200.6 vrf mgmt
    clagd-peer-ip linklocal
    clagd-priority 2000
    clagd-sys-mac 44:38:39:AB:CD:01

auto vlan10
iface vlan10
    address-virtual 00:00:00:00:00:01 172.31.10.254/24
    vlan-id 10
    vlan-raw-device bridge


auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2
